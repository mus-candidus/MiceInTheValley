<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>MiceInTheValley</AssemblyName>
    <Version>1.0.0</Version>
    <RootNamespace>MiceInTheValley</RootNamespace>
    <TargetFramework>net452</TargetFramework>
    <ModZipPath>$(SolutionDir)\releases</ModZipPath>
    <IgnoreModFilePatterns>assets[/\\]mouse.ogg</IgnoreModFilePatterns>
  </PropertyGroup>

  <ItemGroup>
    <None Include="LICENSE">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Pathoschild.Stardew.ModBuildConfig" Version="3.0.0-beta.8" />
  </ItemGroup>

</Project>
